@model Product

    <div class="col-lg-4 col-md-6">
        <div class="single-product">
            <div class="product-img">
                <img class="img-fluid w-100"  src="@Model.ImageThumbnailUrl" ale="image for"/>
                <div class="p_icon">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">
                        <i class="ti-eye"></i>
                    </a>
                    <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-ProductId="@Model.ProductId">
                        <i class="ti-shopping-cart"></i>
                    </a>
                </div>
            </div>
            <div class="product-btm">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">
                    <h4>@Model.Name</h4>
                </a>
                <div class="mt-3">
                    <span class="mr-4">@Model.Price</span>
                </div>
            </div>
        </div>
    </div>
