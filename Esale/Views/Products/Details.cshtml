@model eSale.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Name</h2>
<div class="product_image_area">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <div class="s_product_img">
                    @*<div id="carouselExampleIndicators"
                         class="carousel slide"
                         data-ride="carousel">*@

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@Model.ImageUrl">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@Model.ImageThumbnailUrl">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5 offset-lg-1">
            <div class="s_product_text">
                <h3>
                        @Model.Name
                </h3>

                <h2>@Model.Price zł</h2>

                <ul class="list">
                    <li>
                        @Html.DisplayFor(model => model.DateAdded)
                    </li>

                    <li>
                    <a class="active">
                        <span>Category</span> : @Model.Category
                    </a>
                    </li>
                </ul>
                <p class="lead">
                    @Html.DisplayFor(model => model.Description)
                </p>
                <div class="card_area">
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@Model.ProductId">Do koszyka</a>
                </div>
                <div>
                    <a onClick="history.go(-1); return false;" class="btn btn-primary">Wróc do zakupów</a>
                </div>
            </div>
        </div>
    </div>

</div>
<div>
</div>
