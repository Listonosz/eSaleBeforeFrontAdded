@model Order

    <form asp-action="Checkout" method="Post" class="form-horizontal" role="form">
        <h4> You;re stap away from purasche</h4>

        <div asp-validation-summary="All" class="danger"></div>

        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="danger"></span>
            </div>
        </div>



        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md2 control-label"></label>
            <div class="col-md-5">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="danger"></span>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-primary" value="Complete Order"/>
            </div>
        </div>
    </form>